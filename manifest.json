{
    "manifest_version": 3,
    "name": "Copy Email & Phone",
    "version": "1.0.0",
    "description": "Copy phone numbers and email addresses immediately when clicked, with a toast notification.",
    "permissions": [
      "clipboardWrite"
    ],
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "author": "Rumman Sadiq"
  }
  
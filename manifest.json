{
  "manifest_version": 3,
  "name": "Copy Email & Phone",
  "version": "1.1",
  "description": "Copy email and phone links directly to clipboard with a smooth native toast.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/hover-style.js",
        "scripts/toast.js",
        "scripts/copy-logic.js",
        "scripts/content-main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "author": "Rumman Sadiq"
}
